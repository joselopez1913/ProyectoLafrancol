@model Lafrancol.SoluEventos.Entidades.ProveedorDto

@{
    ViewBag.Title = "NuevoProveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ingrese los datos del Proveedor a Registrar:</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

        <div class="form-group form-inline">
            <div class="col-md-3">
                <label>NIT</label>
            </div>
            <div class="col-md-9">
                    
                    @Html.EditorFor(model => model.nit, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nit, "", new { @class = "text-danger" })
            </div>
            </div>

            <div class="form-group form-inline">
                <div class="col-md-3">
                    <Label>Razon Social </Label>
                </div>
                <div class="col-md-9">

                    @Html.EditorFor(model => model.razonSocial, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.razonSocial, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-inline">
                <div class="col-md-3">
                    <label>Persona Contacto</label>
                </div>
                
                <div class="col-md-9">
                    @Html.EditorFor(model => model.personaContacto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.personaContacto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group form-inline">
                <div class="col-md-3">
                    <label>Teléfono</label>
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group form-inline">
                <div class="col-md-3">
                    <label>Dirección</label>
                </div>
                <div class="col-md-9">
                    @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar Proveedor" id="btnGuardarProveedor" formaction=@Url.Action("guardarProveedor","api/Apiproveedor") formmethod="post" class="btn btn-default" />

                </div>
            </div>
        </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/Proveedor/NuevoProveedor.js"></script>